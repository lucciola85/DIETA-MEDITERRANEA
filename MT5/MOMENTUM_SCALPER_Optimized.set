InpATRMinPercent=0.2
; Min 0.2% ATR - avoid very quiet markets

InpATRMaxPercent=2.0
; Max 2% ATR - avoid geopolitical crisis volatility

;=================================================================
; SESSION FILTER
;=================================================================
InpUseSessionFilter=1
